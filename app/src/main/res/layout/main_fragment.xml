<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="fragment"
            type="com.tasneem.poftakehome.feat.ui.main.view.MainFragment" />

        <variable
            name="viewModel"
            type="com.tasneem.poftakehome.feat.ui.main.viewModel.MainViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--  Error View -->
        <include
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/layout_error"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:onTryAgain="@{ ()-> viewModel.loadData() }"
            android:visibility="@{viewModel.isError ? View.VISIBLE : View.GONE, default=gone}"/>

        <!-- Empty View -->
        <include
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/layout_empty_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="@{viewModel.isEmpty ? View.VISIBLE : View.GONE, default=gone}"/>

        <!-- Shimmer View -->

        <include
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/layout_home_shimmer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE : View.GONE, default=gone}"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:adapter="@{fragment.getAdapter()}"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layoutManager="@{fragment.getLayoutManager()}"/>

    </android.support.constraint.ConstraintLayout>
</layout>

