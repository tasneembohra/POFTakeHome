<?xml version="1.0" encoding="utf-8"?>
<layout>
    <com.facebook.shimmer.ShimmerFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/viewImage"
                android:layout_width="@dimen/list_user_image"
                android:layout_height="@dimen/list_user_image"
                android:background="@drawable/shimmer_rectangle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/viewTitle"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:background="@drawable/shimmer_rectangle"
                app:layout_constraintStart_toEndOf="@+id/viewImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintWidth_percent=".4"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:background="@drawable/shimmer_rectangle"
                app:layout_constraintStart_toEndOf="@+id/viewImage"
                app:layout_constraintTop_toBottomOf="@+id/viewTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
        </android.support.constraint.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</layout>
